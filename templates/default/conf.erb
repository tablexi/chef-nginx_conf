# Maintained by Chef.  Any manual changes will be overwritten

server {
  listen <%= @listen %>;
  server_name <%= @server_name %>;
  <% if @ssl -%>
  ssl_certificate <%= @ssl[:certificate] %>;
  ssl_certificate_key <% @ssl[:certiciate_key] %>;
  <% end -%>
  <% if @root -%>
  root <%= @root %>;
  <% end -%>
  <% Array(@block).each do |b| -%>

  <%= b %>
  <% end -%>

  <% @options.each do |option,value| -%>
  <% if value.kind_of?(Hash) -%>
  <% value.each do |k,v| -%>
  <%= option %> <%= k %> <%= v %>;
  <% end -%>
  <% elsif value.kind_of?(Array) -%>
  <% value.each do |v| -%>
  <%= option %> <%= v %>;
  <% end -%>
  <% else -%>
  <%= option %> <%= value %>;
  <% end -%>
  <% end -%>

  <% unless @type == :static -%>
  <% Array(@locations).each do |name, location| -%>
  location <%= name %> {
    <% location.each do |option,value| -%>
    <% if value.kind_of?(Hash) -%>
    <% value.each do |k,v| -%>
    <%= option %> <%= k %> <%= v %>;
    <% end -%>
    <% elsif value.kind_of?(Array) -%>
    <% value.each do |v| -%>
    <%= option %> <%= v %>;
    <% end -%>
    <% else -%>
    <%= option %> <%= value %>;
    <% end -%>
    <% end -%>
  }
  <% end -%>
  <% end -%>
}